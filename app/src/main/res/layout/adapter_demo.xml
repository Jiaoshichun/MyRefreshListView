<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myandroid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    myandroid:cardBackgroundColor="@color/colorAccent"
    myandroid:cardCornerRadius="10dp"
    myandroid:cardElevation="0dp"
    myandroid:contentPadding="0dp">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:textColor="@color/text_gray_input"
        android:textSize="16sp" />

</android.support.v7.widget.CardView>